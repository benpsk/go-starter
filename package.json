{
  "name": "go-starter",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "vendor": "cp node_modules/htmx.org/dist/htmx.min.js static/vendor/htmx.min.js && cp node_modules/chart.js/dist/chart.umd.min.js static/vendor/chart.umd.min.js",
    "watch": "concurrently \"npm run build:css -- --watch\" \"npm run build:js -- --watch\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx @tailwindcss/cli -i ./internal/web/assets/input.css -o ./static/app.css --minify",
    "build:js": "npx esbuild ./internal/web/assets/app.js --bundle --minify --outfile=./static/app.min.js"
  },
  "devDependencies": {
    "chart.js": "^4.5.1",
    "concurrently": "^9.2.1",
    "daisyui": "^5.5.18",
    "esbuild": "^0.25.10",
    "htmx.org": "^2.0.8",
    "tailwindcss": "^4.1.18"
  }
}
